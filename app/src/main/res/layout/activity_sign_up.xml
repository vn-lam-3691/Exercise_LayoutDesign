<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/top_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_11"
        app:layout_editor_absoluteX="-130dp"
        app:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/roboto_bold"
        android:text="Create account"
        android:textSize="30sp"
        android:textColor="#262626"
        app:layout_constraintTop_toBottomOf="@id/top_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="32dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintTop_toBottomOf="@id/title_signUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person"
            app:tint="#262626"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="text"
            android:importantForAutofill="no"
            android:hint="Username"
            android:fontFamily="@font/roboto_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#C8C8C8"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="18dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintTop_toBottomOf="@id/input_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            app:tint="#262626"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="textPassword"
            android:importantForAutofill="no"
            android:hint="Password"
            android:fontFamily="@font/roboto_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#C8C8C8"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="18dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintTop_toBottomOf="@id/input_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            app:tint="#262626"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no"
            android:hint="E-Mail"
            android:fontFamily="@font/roboto_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#C8C8C8"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="18dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:orientation="horizontal"
        android:background="@drawable/background_with_shadow"
        app:layout_constraintTop_toBottomOf="@id/input_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_phone"
            app:tint="#262626"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:inputType="number"
            android:importantForAutofill="no"
            android:hint="Mobile"
            android:fontFamily="@font/roboto_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textColorHint="#C8C8C8"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/button_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:src="@drawable/button_next"
        app:layout_constraintBottom_toTopOf="@id/text_list_social"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/roboto_medium"
        android:text="Create"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#262626"
        app:layout_constraintTop_toTopOf="@id/button_signUp"
        app:layout_constraintBottom_toBottomOf="@id/button_signUp"
        app:layout_constraintEnd_toStartOf="@id/button_signUp"/>

    <TextView
        android:id="@+id/text_list_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/roboto_regular"
        android:text="Or create account using social media"
        android:textSize="15sp"
        android:textColor="#262626"
        app:layout_constraintBottom_toTopOf="@id/list_social"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/list_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/copyright"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_twitter"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_google"/>

    </LinearLayout>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/roboto_regular"
        android:text="Copyright by Trương Văn Lâm - 21115053120326"
        android:textSize="16sp"
        android:textColor="#262626"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>